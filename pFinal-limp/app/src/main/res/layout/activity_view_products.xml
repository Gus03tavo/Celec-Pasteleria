<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".adminSection.viewProducts.ViewProducts">

    <LinearLayout
        android:id="@+id/navMarca"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/btnVolver"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:src="@drawable/ic_back_button"
            android:layout_marginEnd="20dp"
            android:scaleType="centerCrop"

            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_celec"

            />

        <TextView
            android:id="@+id/marca"
            android:layout_width="192dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/rochester_regular"
            android:gravity="center"
            android:text="Celec"
            android:textSize="28sp"
            android:layout_marginEnd="50dp"
            />


    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvViewPorducts"
        android:layout_width="412dp"
        android:layout_height="653dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"

        android:foregroundGravity="center_horizontal"

        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/navMarca" />

    <Button
        android:id="@+id/btnMenuBack"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/login"
        android:fontFamily="@font/zenoldmincho"
        android:text="MenÃº"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>