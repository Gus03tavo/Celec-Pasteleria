<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".adminSection.DashAdmin">

    <TextView
        android:id="@+id/textView"
        android:layout_width="150dp"
        android:layout_height="25dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/botonadmin"
        android:gravity="center"
        android:text="Admin"
        android:textColor="@color/login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtNombreUsuarioAdm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="345dp"
        android:layout_marginTop="50dp"

        android:text="Cuenta"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtNombreUsuarioAdm" />


    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="350dp"
        android:layout_height="48dp"
        android:layout_marginTop="40dp"
        android:outlineSpotShadowColor="@color/login"
        app:cardElevation="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnCrearProducto"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/botonadmin"
            android:gravity="start|center"
            android:paddingStart="10dp"
            android:text="Crear Producto" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="310dp"
            android:layout_marginTop="12dp"
            app:srcCompat="@drawable/image2" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/btnModificarPage"
        android:layout_width="350dp"
        android:layout_height="48dp"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView"
        app:cardElevation="20sp"
        android:outlineSpotShadowColor="@color/login">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnModificarProducto"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/botonadmin"
            android:gravity="start|center"
            android:paddingStart="10dp"
            android:text="Modificar Producto" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="310dp"
            android:layout_marginTop="12dp"
            app:srcCompat="@drawable/image2" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/btnDeletePage"
        android:layout_width="350dp"
        android:layout_height="48dp"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnModificarPage"
        app:cardElevation="20sp"
        android:outlineSpotShadowColor="@color/login">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnDeleteProducto"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/botonadmin"
            android:gravity="start|center"
            android:paddingStart="10dp"
            android:text="Eliminar Producto" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="310dp"
            android:layout_marginTop="12dp"
            app:srcCompat="@drawable/image2" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/btnVerPage"
        android:layout_width="350dp"
        android:layout_height="48dp"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnDeletePage"
        app:cardElevation="20sp"
        android:outlineSpotShadowColor="@color/login">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnVerProducto"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/botonadmin"
            android:gravity="start|center"
            android:paddingStart="10dp"
            android:text="Visualizar Producto" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="310dp"
            android:layout_marginTop="12dp"
            app:srcCompat="@drawable/image2" />
    </androidx.cardview.widget.CardView>

    <!--esto es lo nuevo-->

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnCerrarSesion"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="35dp"
        android:background="@drawable/botoneshape"
        android:text="Cerrar SesiÃ³n"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:cardElevation="20sp"/>

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ico2" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:srcCompat="@drawable/ico45" />

</androidx.constraintlayout.widget.ConstraintLayout>