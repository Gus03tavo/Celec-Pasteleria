<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"

            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_celec"

                />

            <TextView
                android:id="@+id/marca"
                android:layout_width="178dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/rochester_regular"
                android:gravity="center"
                android:text="Celec"
                android:textSize="28sp" />


        </LinearLayout>




            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:cardElevation="20dp"

                app:cardCornerRadius="16dp"

                android:outlineSpotShadowColor="@color/shadow"

                android:layout_marginTop="20dp"
                tools:targetApi="p">

                <ImageView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/firstviewimg"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="32sp"
                    android:text="Deliciosas creaciones\nhorneadas"
                    android:layout_gravity="start|bottom"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="16dp"
                    />

            </androidx.cardview.widget.CardView>



        <Button
            android:id="@+id/btnAdmin"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:text="Admin"
            android:fontFamily="@font/zenoldmincho"
            android:textSize="25sp"

            android:paddingVertical="12dp"
            android:backgroundTint="@color/admin"
            />

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:text="Login"
            android:fontFamily="@font/zenoldmincho"
            android:textSize="25sp"
            android:paddingEnd="90dp"
            android:paddingStart="90dp"
            android:paddingVertical="12dp"
            android:backgroundTint="@color/login"
            />

        <Button
            android:id="@+id/btnSignUp"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:text="Sign Up"
            android:fontFamily="@font/zenoldmincho"
            android:textSize="25sp"

            android:paddingVertical="12dp"
            android:backgroundTint="@color/signup"
            />



    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>