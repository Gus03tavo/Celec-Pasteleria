<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".compra.MetodoPago"
    android:id="@+id/metodop">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="29dp"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:src="@drawable/ic_back_button"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_celec" />
                <TextView
                    android:id="@+id/marca"
                    android:layout_width="178dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/rochester_regular"
                    android:gravity="center"
                    android:text="Celec"
                    android:textSize="24sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:orientation="vertical"
                android:layout_marginTop="80dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:text="Método de Pago"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="#000000"
                    android:text="Registrar y continuar"
                    android:fontFamily="sans-serif-smallcaps"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="155dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="#5C5959"
                    android:text="Nombres:"
                    android:fontFamily="@font/zenoldmincho"
                    android:textStyle="bold"

                    android:layout_marginBottom="10dp"
                   />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"

                    app:cardElevation="0dp"
                    app:cardUseCompatPadding="false">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginHorizontal="22dp"
                            android:layout_weight="6"
                            android:outlineSpotShadowColor="@color/login"
                            app:cardCornerRadius="30dp"
                            app:cardElevation="20dp">

                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                android:background="@drawable/bordercolor"
                                android:hint="Ingrese nombres"
                                android:inputType="text"
                                android:paddingHorizontal="10dp"
                                android:paddingVertical="10dp"
                                android:textSize="13sp"

                                />

                        </androidx.cardview.widget.CardView>


                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="#5C5959"
                    android:text="Apellidos:"
                    android:fontFamily="@font/zenoldmincho"
                    android:textStyle="bold"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    app:cardElevation="0dp"
                    app:cardUseCompatPadding="false">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginHorizontal="22dp"
                            android:layout_weight="6"
                            android:outlineSpotShadowColor="@color/login"
                            app:cardCornerRadius="30dp"
                            app:cardElevation="20dp">

                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                android:background="@drawable/bordercolor"
                                android:hint="Ingrese apellidos"
                                android:inputType="text"
                                android:paddingHorizontal="10dp"
                                android:paddingVertical="10dp"
                                android:textSize="13sp" />

                        </androidx.cardview.widget.CardView>


                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="#5C5959"
                    android:text="Email:"
                    android:fontFamily="@font/zenoldmincho"
                    android:textStyle="bold"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    app:cardElevation="0dp"
                    app:cardUseCompatPadding="false">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginHorizontal="22dp"
                            android:layout_weight="6"
                            android:outlineSpotShadowColor="@color/login"
                            app:cardCornerRadius="30dp"
                            app:cardElevation="20dp">

                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                android:background="@drawable/bordercolor"
                                android:hint="Ingrese email"
                                android:inputType="textEmailAddress"
                                android:paddingHorizontal="10dp"
                                android:paddingVertical="10dp"
                                android:textSize="13sp" />

                        </androidx.cardview.widget.CardView>


                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="#5C5959"
                    android:text="Teléfono:"
                    android:fontFamily="@font/zenoldmincho"
                    android:textStyle="bold"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    app:cardElevation="0dp"
                    app:cardUseCompatPadding="false">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginHorizontal="22dp"
                            android:layout_weight="6"
                            android:outlineSpotShadowColor="@color/login"
                            app:cardCornerRadius="30dp"
                            app:cardElevation="20dp">

                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                android:background="@drawable/bordercolor"
                                android:hint="Ingrese teléfono"
                                android:inputType="phone"
                                android:paddingHorizontal="10dp"
                                android:paddingVertical="10dp"
                                android:textSize="13sp" />

                        </androidx.cardview.widget.CardView>


                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="#5C5959"
                    android:text="Nro Tarjeta:"
                    android:fontFamily="@font/zenoldmincho"
                    android:textStyle="bold"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    app:cardElevation="0dp"
                    app:cardUseCompatPadding="false">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            app:cardElevation="0dp"
                            app:cardUseCompatPadding="false">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:orientation="horizontal">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginHorizontal="22dp"
                                    android:layout_weight="6"
                                    android:outlineSpotShadowColor="@color/login"
                                    app:cardCornerRadius="30dp"
                                    app:cardElevation="20dp">

                                    <com.google.android.material.textfield.TextInputLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        app:boxBackgroundMode="outline"
                                        app:endIconMode="password_toggle"
                                        android:background="@drawable/bordercolor">

                                        <com.google.android.material.textfield.TextInputEditText
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:background="@android:color/transparent"
                                            android:inputType="numberPassword"
                                            android:hint="Introduce nro de tarjeta"
                                            android:textColorHint="#B11C1C"
                                            android:paddingHorizontal="10dp"
                                            android:paddingVertical="10dp"
                                   />

                                    </com.google.android.material.textfield.TextInputLayout>

                                </androidx.cardview.widget.CardView>


                            </LinearLayout>
                        </androidx.cardview.widget.CardView>


                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="#5C5959"
                    android:text="CVV:"
                    android:fontFamily="@font/zenoldmincho"
                    android:textStyle="bold"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    app:cardElevation="0dp"
                    app:cardUseCompatPadding="false">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            app:cardElevation="0dp"
                            app:cardUseCompatPadding="false">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:orientation="horizontal">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginHorizontal="22dp"
                                    android:layout_weight="6"
                                    android:outlineSpotShadowColor="@color/login"
                                    app:cardCornerRadius="30dp"
                                    app:cardElevation="20dp">

                                    <com.google.android.material.textfield.TextInputLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        app:boxBackgroundMode="outline"
                                        app:endIconMode="password_toggle"
                                        android:background="@drawable/bordercolor">

                                        <com.google.android.material.textfield.TextInputEditText
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:background="@android:color/transparent"
                                            android:inputType="numberPassword"
                                            android:hint="Introduce tu contraseña"
                                            android:paddingHorizontal="10dp"
                                            android:paddingVertical="10dp"
                                            android:textColorHighlight="#573E3E"
                                          />

                                    </com.google.android.material.textfield.TextInputLayout>

                                </androidx.cardview.widget.CardView>


                            </LinearLayout>
                        </androidx.cardview.widget.CardView>


                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="#5C5959"
                    android:text="Fecha de vencimiento:"
                    android:fontFamily="@font/zenoldmincho"
                    android:textStyle="bold"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    app:cardElevation="0dp"
                    app:cardUseCompatPadding="false">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginHorizontal="22dp"
                            android:layout_weight="6"
                            android:outlineSpotShadowColor="@color/login"
                            app:cardCornerRadius="30dp"
                            app:cardElevation="20dp">

                            <EditText
                                android:id="@+id/editTextFechaVencimiento"
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                android:background="@drawable/bordercolor"
                                android:hint="MM/YY"
                                android:inputType="number"
                                android:digits="0123456789/"
                                android:maxLength="5"
                                android:paddingHorizontal="10dp"
                                android:paddingVertical="10dp"
                                android:textSize="13sp" />

                        </androidx.cardview.widget.CardView>


                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="#5C5959"
                    android:text="Tipo de Tarjeta:"
                    android:fontFamily="@font/zenoldmincho"
                    android:textStyle="bold"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    app:cardElevation="0dp"
                    app:cardUseCompatPadding="false">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginHorizontal="22dp"
                            android:layout_weight="6"
                            android:outlineSpotShadowColor="@color/login"
                            app:cardCornerRadius="30dp"
                            app:cardElevation="10dp">

                            <Spinner
                                android:id="@+id/spinnerTipoTarjeta"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/bordercolor"
                                android:paddingHorizontal="10dp"
                                android:paddingVertical="10dp"
                                android:textSize="13sp" />

                        </androidx.cardview.widget.CardView>


                    </LinearLayout>
                </androidx.cardview.widget.CardView>


                <Button
                    android:id="@+id/btnRegistra_metodo"
                    android:layout_width="270dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:text="Registrar"
                    android:fontFamily="@font/zenoldmincho"
                    android:textSize="20sp"
                    android:paddingEnd="90dp"
                    android:paddingStart="90dp"
                    android:paddingVertical="10dp"
                    android:layout_marginBottom="30dp"
                    android:backgroundTint="@color/login"

                    />


            </LinearLayout>





        </RelativeLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>
